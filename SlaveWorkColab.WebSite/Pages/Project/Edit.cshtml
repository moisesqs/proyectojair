@page "{id:int}"
@model SlaveWorkColab.WebSite.Pages.Project.EditModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Editar Plan</title>
    <link rel="stylesheet" href="~/css/Project/Edit.css" />
</head>
<body>

<div class="form-container">
    <a asp-page="/Project/List" class="back">&#8592;</a>
    <h2>EDITAR PLAN</h2>

    <form method="post">
        <input type="hidden" asp-for="Project.Id" />

        <label asp-for="Project.Name">Nombre</label>
        <input asp-for="Project.Name" id="nombre" placeholder="Nombre" />
        <span asp-validation-for="Project.Name" class="text-danger small"></span>

        <label asp-for="Project.Description">Descripción</label>
        <textarea asp-for="Project.Description" id="descripcion" rows="4" placeholder="Descripción"></textarea>
        <span asp-validation-for="Project.Description" class="text-danger small"></span>

        <div class="buttons">
            <a asp-page="/Project/List" class="btn-cancel">Cancelar</a>
            <button type="submit" class="btn-edit">Actualizar plan</button>
        </div>
    </form>
</div>

</body>
</html>
